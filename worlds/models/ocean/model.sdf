        <name>SeaWall</name>
      </script>
      <emissive>
        0.6 0.6 0.6 1.0
      </emissive>
    </material>
  </visual>

  <collision name="south">
    <pose>-1000 0 -100 0 1.5708 0</pose>
    <geometry><plane><normal>0 0 1</normal><size>100 2000</size></plane></geometry>
  </collision>

  <visual name="west">
    <pose>0 1000 -100 1.5708 0 0</pose>
    <geometry><plane><normal>0 0 1</normal><size>2000 100</size></plane></geometry>
    <material>
      <script>
        <uri>file://Media/materials/scripts/water.material</uri>
        <name>SeaWall</name>
      </script>
      <emissive>
        0.6 0.6 0.6 1.0
      </emissive>
    </material>
